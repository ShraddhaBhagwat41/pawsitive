<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:fillViewport="true"
    tools:context=".SignupActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp">

        <!-- Back Button -->
        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:src="@drawable/ic_back_arrow"
            android:contentDescription="@string/back_button"
            android:padding="8dp"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless" />

        <!-- Top Section with Illustration -->
        <LinearLayout
            android:id="@+id/topSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ivBack"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="8dp">

            <!-- Pug and Cat Illustration -->
            <ImageView
                android:id="@+id/ivSignupIllustration"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:src="@drawable/ic_signup_pets"
                android:contentDescription="@string/signup_illustration"
                android:scaleType="fitCenter" />

        </LinearLayout>

        <!-- Form Section -->
        <LinearLayout
            android:id="@+id/formSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/topSection"
            android:orientation="vertical"
            android:layout_marginTop="16dp">

            <!-- Sign Up Title -->
            <TextView
                android:id="@+id/tvSignUpTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sign_up_title"
                android:textSize="32sp"
                android:textStyle="bold"
                android:textColor="@color/gray_dark"
                android:layout_marginBottom="4dp" />

            <!-- Subtitle -->
            <TextView
                android:id="@+id/tvSubtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/signup_subtitle"
                android:textSize="14sp"
                android:textColor="@color/gray_text"
                android:layout_marginBottom="24dp" />

            <!-- Username Input -->
            <EditText
                android:id="@+id/etUsername"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:hint="@string/hint_username"
                android:inputType="text"
                android:background="@drawable/input_field_background"
                android:paddingStart="48dp"
                android:paddingEnd="16dp"
                android:textSize="16sp"
                android:textColor="@color/gray_dark"
                android:textColorHint="@color/gray_text"
                android:drawableStart="@drawable/ic_username"
                android:drawablePadding="12dp"
                android:layout_marginBottom="16dp" />

            <!-- Email or Phone Input -->
            <EditText
                android:id="@+id/etEmailPhone"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:hint="@string/hint_email_phone"
                android:inputType="textEmailAddress"
                android:background="@drawable/input_field_background"
                android:paddingStart="48dp"
                android:paddingEnd="16dp"
                android:textSize="16sp"
                android:textColor="@color/gray_dark"
                android:textColorHint="@color/gray_text"
                android:drawableStart="@drawable/ic_email"
                android:drawablePadding="12dp"
                android:layout_marginBottom="16dp" />

            <!-- Password Input -->
            <EditText
                android:id="@+id/etPassword"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:hint="@string/hint_password"
                android:inputType="textPassword"
                android:background="@drawable/input_field_background"
                android:paddingStart="48dp"
                android:paddingEnd="16dp"
                android:textSize="16sp"
                android:textColor="@color/gray_dark"
                android:textColorHint="@color/gray_text"
                android:drawableStart="@drawable/ic_password"
                android:drawablePadding="12dp"
                android:layout_marginBottom="16dp" />

            <!-- Terms and Conditions Checkbox -->
            <CheckBox
                android:id="@+id/cbTerms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/agree_terms"
                android:textSize="14sp"
                android:textColor="@color/gray_dark"
                android:buttonTint="@color/yellow_primary"
                android:layout_marginBottom="24dp" />

            <!-- Continue Button -->
            <Button
                android:id="@+id/btnContinue"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="@string/continue_btn"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:background="@drawable/btn_rounded_yellow"
                android:elevation="4dp"
                android:layout_marginBottom="16dp"
                android:textAllCaps="false" />

            <!-- Login Text -->
            <TextView
                android:id="@+id/tvLogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/already_have_account_login"
                android:textSize="14sp"
                android:textColor="@color/gray_dark"
                android:layout_gravity="center"
                android:layout_marginBottom="24dp"
                android:clickable="true"
                android:focusable="true" />

        </LinearLayout>

        <!-- Progress Indicator Section -->
        <LinearLayout
            android:id="@+id/progressSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/formSection"
            android:orientation="vertical"
            android:layout_marginTop="16dp">

            <!-- Step Indicators -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="8dp">

                <!-- Step 1: Basic -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:text="1"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"
                        android:background="@drawable/circle_yellow"
                        android:gravity="center"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/step_basic"
                        android:textSize="12sp"
                        android:textColor="@color/yellow_primary"
                        android:textStyle="bold" />

                </LinearLayout>

                <!-- Step 2: Profile -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:text="2"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/gray_text"
                        android:background="@drawable/circle_gray"
                        android:gravity="center"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/step_profile"
                        android:textSize="12sp"
                        android:textColor="@color/gray_text" />

                </LinearLayout>

                <!-- Step 3: Questionnaire -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:text="3"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/gray_text"
                        android:background="@drawable/circle_gray"
                        android:gravity="center"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/step_questionnaire"
                        android:textSize="12sp"
                        android:textColor="@color/gray_text" />

                </LinearLayout>

            </LinearLayout>

            <!-- Progress Bar -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- Background Progress Bar -->
                <ProgressBar
                    android:id="@+id/progressBar"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:progress="0"
                    android:max="100"
                    android:progressDrawable="@drawable/progress_bar_bg"
                    android:layout_centerVertical="true" />

                <!-- 0% Label -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/progress_0"
                    android:textSize="10sp"
                    android:textColor="@color/gray_text"
                    android:layout_alignParentStart="true"
                    android:layout_below="@id/progressBar"
                    android:layout_marginTop="4dp" />

                <!-- 100% Label -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/progress_100"
                    android:textSize="10sp"
                    android:textColor="@color/yellow_primary"
                    android:textStyle="bold"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@id/progressBar"
                    android:layout_marginTop="4dp" />

            </RelativeLayout>

        </LinearLayout>

    </RelativeLayout>

</ScrollView>
