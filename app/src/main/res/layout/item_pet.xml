<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    android:background="@android:color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <!-- Pet Image -->
        <ImageView
            android:id="@+id/ivPetImage"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_pet_placeholder"
            android:contentDescription="@string/pet_image"
            android:scaleType="centerCrop"
            android:background="@drawable/rounded_image_background" />

        <!-- Pet Details Container -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/ivPetImage"
            android:layout_toStartOf="@id/ivFavorite"
            android:layout_centerVertical="true"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="8dp"
            android:orientation="vertical">

            <!-- Pet Name -->
            <TextView
                android:id="@+id/tvPetName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Buddy"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/gray_dark"
                android:layout_marginBottom="2dp" />

            <!-- Breed and Age -->
            <TextView
                android:id="@+id/tvPetBreedAge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Golden Retriever â€¢ 2 years old"
                android:textSize="12sp"
                android:textColor="@color/gray_text"
                android:layout_marginBottom="4dp" />

            <!-- Description -->
            <TextView
                android:id="@+id/tvPetDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Friendly and energetic dog looking for a loving home. Great with kids and other pets."
                android:textSize="12sp"
                android:textColor="@color/gray_text"
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_marginBottom="8dp" />

            <!-- Distance with Icon -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/distance_background"
                android:padding="6dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:src="@drawable/ic_location_small"
                    android:contentDescription="@string/location"
                    android:layout_marginEnd="4dp" />

                <TextView
                    android:id="@+id/tvPetDistance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2.5 km away"
                    android:textSize="10sp"
                    android:textColor="@color/green_success"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>

        <!-- Favorite Icon -->
        <ImageView
            android:id="@+id/ivFavorite"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/ic_heart_outline"
            android:contentDescription="@string/favorite"
            android:padding="4dp"
            android:clickable="true"
            android:focusable="true" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>
